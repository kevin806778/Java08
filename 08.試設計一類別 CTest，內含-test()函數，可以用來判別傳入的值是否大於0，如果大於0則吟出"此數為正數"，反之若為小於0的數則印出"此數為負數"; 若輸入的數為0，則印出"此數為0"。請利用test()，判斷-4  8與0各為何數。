class CTest {
	int x;

	void test(int x) {
		if (x > 0)
			System.out.println("此數為正數");
		else if (x == 0)
			System.out.println("此數為0");
		else
			System.out.println("此數為負數");

	}
}

public class O1 {
	public static void main(String args[]) {

		CTest ss = new CTest();
		System.out.println("test(0)");
		ss.test(0);
		System.out.println("test(-4)");
		ss.test(-4);
		System.out.println("test(8)");
		ss.test(8);
	}
}
